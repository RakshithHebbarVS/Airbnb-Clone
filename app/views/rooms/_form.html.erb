<%= form_for @room do |f|%>
  <% if @room.errors.any?%>
    <div class = "alert alert-danger">
    <h3>These errors </h3>
    <ul>
      <% @room.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <%end%>
    </ul>
    </div>
    <%end%>

<%= f.label :name %><br/>
<%= f.text_field :name %><br/>
<%= f.label :description %><br/>
<%= f.text_area :description %><br/>
<%= f.label :is_available %><br/>
<%= f.check_box :is_available %><br/>
<%= f.collection_select :city_id, City.all, :id, :name, prompt: "Select City" %><br/>
<%= f.collection_select :location_id, Location.all, :id, :name, prompt: "Select Location"%><br/>
<%= f.collection_select :type_ids, Type.all, :id, :name, prompt: "Select Type" %><br/>
<%= f.label :Select_amenities %><br/>
<%= f.collection_check_boxes :amenity_ids, Amenity.all, :id, :name %><br/>
<%= f.label :price %><br/>
<%= f.text_field :price %><br/>
<%= f.label :accomodates %><br/>
<%= f.number_field :accomodates ,{min: 1} %><br/>
<%= f.label :bathrooms %><br/>
<%= f.number_field :bathrooms ,{min: 1} %><br/>
<%= f.label :bedrooms %><br/>
<%= f.number_field :bedrooms ,{min: 1} %><br/>
<%= f.label :beds %><br/>
<%= f.number_field :beds %><br/>
<%= f.label :photo %><br/>
<%= f.file_field :photo %><br/>
<%= f.submit %>
<%end%>