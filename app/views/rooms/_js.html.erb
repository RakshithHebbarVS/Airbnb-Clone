<script>
 $(function () {
     var dateFormat = "yy-mm-dd",
         from = $("#startDate").datepicker({defaultDate: "+1w", minDate: -0, numberOfMonths: 2, dateFormat}).on("change", function () {
             to.datepicker("option", "minDate", getDate(this));
         }),
         to = $("#endDate").datepicker({defaultDate: "+1w", minDate: -0, numberOfMonths: 2, dateFormat}).on("change", function () {
             from.datepicker("option", "maxDate", getDate(this));
         });

     function getDate(element) {
         var date;
         try {
             date = $.datepicker.parseDate(dateFormat, element.value);
         } catch (error) {
             date = null;
         }

         return date;
     }
   });
</script>