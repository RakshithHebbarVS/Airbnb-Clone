<table>
	<thead>
		<th>Name : </th>
		<th>Description : </th>
		<th>City : </th>
		<th>Location : </th>
		<th>Price : </th>
		<th>Accomodates : </th>
		<th>BedRooms : </th>
		<th>BathRooms : </th>
		<th>Beds : </th>
	</thead>
	<tbody>
		<td><%= @room.name %></td>
		<td><%= @room.description %></td>
		<td><%= @room.city.name %></td>
		<td><%= @room.location.name %></td>
		<td><%= @room.price %></td>
		<td><%= @room.accomodates %></td>
		<td><%= @room.bedrooms %></td>
		<td><%= @room.bathrooms %></td>
		<td><%= @room.beds %></td>
	</tbody>
</table>


<h4>Amenities</h4>
<ol>
<% @room.amenities.each do |amenity| %>
<li><%= amenity.name %></li>
<%end%>
</ol>
<h4>Type of Room</h4>
<ul>
<% @room.types.each do |type| %>
<li><%= type.name %></li>
<%end%>
</ul>





<% if current_user.role? "host" %>
<ul>
	<% @booking_months = @room.bookings.where('status != ?','cancel').group_by {|b| b.start_date.beginning_of_month} %>
		<% @booking_months.sort.each do |k,v| %>
		<b><%= k.strftime("%B") %> </b><br/><br/>
		<% v.each do |booking| %>
		<li>
		<%= booking.start_date %> -- <%= booking.end_date %> -- <%= booking.people %>
		<% if booking.status == 'pending' %> 
		<% if can? :confirm_booking, booking  %>
			<%= link_to "Confirm Booking" , bookings_confirm_booking_path(booking_id: booking.id) %>
		<%end%>
		<%end%>
		<% if booking.status == 'pending' || booking.status == 'confirm' %>
		<% if  can? :cancel_booking, booking  %>
			<%= link_to "Cancel Booking" , bookings_cancel_booking_path(booking_id: booking.id), data:{confirm:"ARE you sure"}%>
		<%end%>
		<%end%>
		
		<p>Status :<%= booking.status %></p>
		 </li>
		<%end%>
		<%end%>
	</ul>
<%end%>



<h2>Book this room </h2>
<% days = 0 %>
<% sum = 0 %>

<%= form_for @booking do |f| %>
<%= f.label :Check_In %><br/>
<%= f.date_select :start_date %><br/>

<%= f.label :Check_out %><br/>
<%= f.date_select :end_date %><br/><br/>

<%= f.label :People %><br/>
<%= f.select :people,[1,2,3,4,5] %><br/>

<%= f.hidden_field :room_id, value: @room.id %><br/>

<%= f.submit "Check Price" %><br/><br/>

<% end %>

<% if params[:booking_id] %>
	<br/><b><%= @booking_confirmed.total %> INR</b><br/><br/>
<% end %>

<%= form_for @wishlist do |f| %>
<%= f.hidden_field :room_id, value: @room.id %>
<%= f.submit "Add to wishlist"  %><br/>
<%end%>

<% if current_user.role? "guest" %>
<%= link_to "See Rooms Booked by me", bookings_path %><br/>
<%= link_to "See My wishlist", wishlists_path %><br/>
<%end%>



<%= link_to "Back",rooms_path %>
